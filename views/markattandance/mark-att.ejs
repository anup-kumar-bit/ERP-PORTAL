<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mark Attendance</title>
  <link rel="stylesheet" href="./css/markattcss/mark-att.css">
  <link rel="icon" href="/css/icon.png" type="image/x-icon">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div class="mainblock">
    <div class="mb-1">
      <div class="menu">
        <div class="image">
          <img src="./css/markattcss/university.jpg" alt="loading" class="uni-img">
        </div>
        <p class="user">Faculty-info</p>
        <div class="collepse">
          <div class="fac-detail1"><span class="info" id="info-id">Tony Stark</span></div>
          <div class="fac-detail"><span class="info">University Id: </span><span class="info">ADHJD41222019</span></div>
          <div class="fac-detail"><span class="info">Department : </span><span class="info">BCA</span></div>
          <div class="fac-detail"><span class="info">Course : </span><span class="info">Cloud computing</span></div>
          <div class="fac-detail"><span class="info">Tenure :</span><span class="info">4 month</span></div>
          <div class="fac-detail"><span class="info"></span><span class="info"></span></div>
        </div>
        <!-- ---------------- -->
        <div class="signout">
          <button class="btn-sign">Log Out</button>
        </div>
      </div>
      <!-- <div class="navig">ass</div> -->
    </div>
    <!-- ---------------------------moudle 2 -----------------------------------       -->
    <div class="mb-2">
      <nav class="navigate">
        <h1 class="welcome">Welcome Faculty !</h1>
        <div class="profile">
          <i class='bx bx-search-alt-2 icon-notifi'></i>
          <i class='bx bxs-bell bx-flip-horizontal icon-notifi'></i>
          <!-- <img src="photo.png" alt="loading" class="prof"> -->
        </div>
      </nav>
      <div class="body">
        <!-- -----------------------------  -->
        <div class="topic">
          <span class="tp-1">Student's attandance</span>
        </div>
        <!-- --------   -->
        <div class="table-div">
          <div class="date">
            <% if (msg) { %>
            <div class="pop-msg">
                <div class="duplicacy" role="alert">
                    <%= msg %>
                </div>
                <button class="msg-button"><i class='bx bx-x'></i></button>
              </div>
              <% } %>
            <select name="class-duration" value="" id="Course-duration">
              <option value="1">1</option>
              <option value="2" selected>2</option>
              <option value="3">3</option>
              <option value="4">4</option>
            </select>
            <input type="date" class="input-date">
          </div>
          <form action="/attendance" method="post" id="myForm">
            <table class="table table-striped ">
              <thead>
                <tr>
                  <th scope="col">Roll no</th>
                  <th scope="col">Name</th>
                  <th scope="col">Course</th>
                  <th scope="col">Duration</th>
                  <th scope="col">Theory / Practical</th>
                  <th scope="col">Date</th>
                  <th scope="col">Status</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody id="mytable">
                <% if(st_details) {%>   
                <% let i =0; %>   
                <% st_details.forEach(function(det) {%>
                <tr class="work-tr">
                  <th scope="row" class="td-c"><%= det.rollno %></th>
                  <!-- ----------  -->
                  <td class="td-c"><input type="text" value="<%= det.name %>" name="student<%= i %>[user]" readonly class="inp"></td>
                  <!-- -------  -->
                  <td class="td-c"><input type="text" value="<%= det.course %>" name="student<%= i %>[Course]" readonly class="inp"></td>
                  <!-- <td class="td-c"><input type="text" value="Cloud computing" name="student1[]" readonly class="inp"></td> -->
                  <!-- ---------  -->
                  <td class="td-c">
                    <input type="text" value="" name="student<%= i %>[duration]" readonly class="inp c-dur">
                  </td>
                  <!-- ----------  -->
                  <td class="td-c">
                    <input type="radio" class="btn-check" name="student<%= i %>[btnradio]" id="btnradio1<%= i %>" autocomplete="off" checked value="Thoery">
                    <label class="btn btn-outline-primary" for="btnradio1<%= i %>">Thoery</label>

                    <input type="radio" class="btn-check" name="student<%= i %>[btnradio]" id="btnradio2<%= i %>" autocomplete="off"
                    value="Practical">
                    <label class="btn btn-outline-primary" for="btnradio2<%= i %>">Practical</label>
                  </td>
                  <!-- --------- -->
                  <td class="td-c "><input type="text" value="" name="student<%= i %>[date]" readonly class="inp date-value-student"></td>
                  <!-- -------  -->
                  <td class="td-c">
                    <input type="radio" class="btn-check" name="student<%= i %>[btnradiop]" id="btnradio11<%= i %>" autocomplete="off" checked value="Present">
                    <label class="btn btn-outline-success" for="btnradio11<%= i %>">Present</label>

                    <input type="radio" class="btn-check" name="student<%= i %>[btnradiop]" id="btnradio22<%= i %>" autocomplete="off" value="Absent">
                    <label class="btn btn-outline-danger" for="btnradio22<%= i %>">Absent</label>
                  </td>
                  <td class="td-c "><span class="percentage"><%= det.attandencepercentage %></span></td>
<!-- ------------------------------------------------------------------------------------------------------------  -->
                </tr>
                <% i++; %>  
                <% });} %>
              </tbody>
            </table>
            <% if(st_details.length!=0) {%>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="button" class="btn btn-dark" id="att-list">See list</button>
            <% } %>
          </form>
        </div>
        <!-- --------------------------------------------------- ? -->
        <%- include('../common.ejs') %> <!-- including navigation code file-->
        <!-- --------------------------------------------------------- ? -->
      </div>
    </div>
  </div>
  <script src="./css/markattcss/mark.att.js"></script>  
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>