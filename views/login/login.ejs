<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
    <link rel="stylesheet" href="/css/login/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>
    <% if(msg && msg.length >0) { %>
        <div class="flash">
            <div class="pop-msg">
                <div class="duplicacy" role="alert">
                    <%= msg %>
                </div>
                <button class="msg-button"><i class='bx bx-x'></i></button>
            </div>
        </div>
    <% } else if(msg2 && msg2.length >0) { %>
        <div class="flash">
            <div class="pop-msg" style="background-color: rgba(140, 251, 134, 0.69);     border: 2px solid rgb(54, 157, 2);">
                <div class="duplicacy" role="alert" style="color: rgb(0, 0, 0);">
                    <%= msg2 %>
                </div>
                <button class="msg-button" ><i class='bx bx-x' style="color:rgb(18 16 16)"></i></button>
            </div>
        </div>
        <% } %>
        <div class="main">
            <div class="block1">
                <span class="login">
                    <div class="cl1"><span class="cl1-txt">Welcome to University</span>
                        <span class="cl1-txt">Erp Portal</span>
                        <span class="cl1-txt2">please login if u already sign up</span>
                    </div>
                    <div class="cl2">
                        <span class="cl1-txt2">You can access Resources by logged in !</span>
                        <button class="cl2btn" id="cl2btnlogin">Sign up</button>
                    </div>
                </span>
                <span class="signup">
                    <div class="cl1"><span class="cl1-txt">Welcome to University</span>
                        <span class="cl1-txt">Erp Portal</span>
                        <span class="cl1-txt2">please sign up to login next time</span>
                    </div>
                    <div class="cl2">
                        <span class="cl1-txt2">You can access Resources by logged in !</span>
                        <button class="cl2btn" id="cl2btnsignup">Login</button>
                    </div>
                </span>
            </div>
    
            <div class="login-block">
                <span class="loginfrm">
                    <div class="title-log">Login</div>
                    <div class="content">
                        <form action="/login" method="post" class="needs-validation" novalidate>
                            <div class="title2">
                                <div id="validationServer04Feedback" class="invalid-feedback">
                                    Please enter a valid EmailId
                                </div>
                                <label for="email" class="form-label topic">Email ID:</label>
                                <input type="email" class="inputs form-control" id="email" name="Email"
                                    placeholder="Email address" required>
                                <div id="validationServer04Feedback" class="invalid-feedback">
                                    Please enter a valid EmailId
                                </div>
                            </div>
                            <div class="title2">
                                <label for="password" class="form-label topic">Password:</label>
                                <input type="password" class="form-control inputs" id="password" name="Password"
                                    minlength="6" placeholder="Password" required>
                                <label class="for-pass" for="showPasswordCheckbox">
                                    <input type="checkbox" id="showPasswordCheckbox">
                                    <span class="password">Show Password</span>
                                </label>
                                <div id="validationServer04Feedback" class="invalid-feedback">
                                    Please enter a valid Password (minimum 6 characters).
                                </div>
                            </div>
                            <div class="title2">
                                <label class="topic" for="identity">Identity:</label>
                                <select name="Identity" id="identity" class="inputs-selection" required>
                                    <option value="Faculty">Faculty</option>
                                    <option value="Student">Student</option>
                                    <option value="off campus">Off campus</option>
                                </select>
                            </div>
                            <div class="title-btn1">
                                <button type="submit" class="btn-m">Login</button>
                            </div>
                        </form>
                    </div>
                </span>
                <!-- ------signup block -------- -->
                <span class="signupfrm">
                    <div class="title-log2">Signup Form</div>
                    <div class="content">
                        <form action="/signup" method="post" class="needs-validation" novalidate>
                            <div class="title" id="t1">
                                <input type="text" class="form-control t1-1" id="validationCustom01" placeholder="Name"
                                    name="sign[name]" required>
                                <input type="text" class="form-control t1-2" id="validationCustom02" placeholder="Course"
                                    name="sign[course]" required>
                            </div>
                            <div class="title" id="p-title">
                                <input type="password" class="form-control inputs" id="password2" minlength="6"
                                    placeholder="password" name="sign[password]" required>
                                <img src="/css/eyecloses.png" alt="" class="p-title-img showpass">
                            </div>
                            <div class="title" id="p-title1">
                                <input type="email" class="form-control inputs" id="email1" placeholder="email address"
                                    name="sign[email]" required>
                            </div>
                            <div class="title">
                                <select name="sign[identity]" id="campus" class="inputs-selection form-control">
                                    <option value="Faculty">Faculty </option>
                                    <option value="Student">Student</option>
                                    <!-- <option value="off campus">Off campus</option> -->
                                </select>
                            </div>
                            <div class="title-btn1">
                                <button class="btn-m">Sign up</button>
                            </div>
                        </form>
                    </div>
                </span>
            </div>
        </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
    <script src="/css/login/login.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</body>

</html>